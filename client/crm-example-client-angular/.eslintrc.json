{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "no-extra-semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": ["error", "always-multiline"]
    }
}
